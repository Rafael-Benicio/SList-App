<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modal_card"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Big Text and Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Big Text -->
            <TextView
                android:id="@+id/big_text_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Close Button -->
            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/new_group_close_modal_button"
                android:src="@drawable/ic_close" />

        </LinearLayout>

        <!-- Small Text -->
        <TextView
            android:id="@+id/small_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Order the items by :"
            android:textSize="14sp" />

        <!-- New UI Elements Start Here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Name Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Label -->
                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <!-- Up Arrow Button -->
                    <ImageButton
                        android:id="@+id/btn_name_up"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/btn_okay"
                        android:contentDescription="Name Up"
                        android:src="@drawable/ic_arrow_upward" />

                    <!-- Down Arrow Button -->
                    <ImageButton
                        android:id="@+id/btn_name_down"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/btn_okay"
                        android:contentDescription="Name Down"
                        android:src="@drawable/ic_arrow_downward" />

                </LinearLayout>
            </LinearLayout>

            <!-- Value Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Label -->
                <TextView
                    android:id="@+id/label_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value :"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <!-- Up Arrow Button -->
                    <ImageButton
                        android:id="@+id/btn_value_up"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/btn_okay"
                        android:contentDescription="Value Up"
                        android:src="@drawable/ic_arrow_upward" />

                    <!-- Down Arrow Button -->
                    <ImageButton
                        android:id="@+id/btn_value_down"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/btn_okay"
                        android:contentDescription="Value Down"
                        android:src="@drawable/ic_arrow_downward" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!-- New UI Elements End Here -->

        <!-- Second Big Text -->
        <TextView
            android:id="@+id/big_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Delete Mode"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Second Small Text -->
        <TextView
            android:id="@+id/small_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You will be able to delete items"
            android:textSize="14sp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_negate"
            android:text="Delete"
            android:textColor="@color/negate_d" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
