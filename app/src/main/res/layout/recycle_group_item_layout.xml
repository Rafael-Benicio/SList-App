<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background">

    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/item_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/cover_image"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image" />

    <!-- Sobreposição semi-transparente (opcional) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Título no canto inferior esquerdo -->
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="@string/default_group_name"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Ícone de engrenagem no canto superior direito -->
    <ImageView
        android:id="@+id/item_gear_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/gear_icon"
        android:src="@drawable/ic_settings"
        app:tint="@android:color/white" />

</RelativeLayout>
